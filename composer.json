{
    "name": "trismegiste/mondrian",
    "description": "Mondrian is a set of static analysis and refactoring tools for more abstraction",
    "type": "CLI",
    "keywords": ["refactoring", "abstract", "graph", "analysis", "static", "code", "metrics"],
    "authors": [
        {
            "name": "Trismegiste"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6",
        "nikic/php-parser": "^3.0",
        "symfony/console": "^2.3",
        "alom/graphviz": "^1.0",
        "symfony/finder": "^2.3",
        "symfony/yaml": "^2.3",
        "symfony/config": "^2.3",
        "mischiefcollective/colorjizz": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "kherge/box": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Trismegiste\\Mondrian\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trismegiste\\Mondrian\\Tests\\": "tests/"
        }
    },
    "license": "CC-BY-SA-3.0",
    "extra": {
        "plugins": [
            "Trismegiste\\Mondrian\\Plugin\\About"
        ]
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "build": "vendor/bin/box build"
    }
}
